<h2>Add a Position</h2>

<div class="form">
  <%= error_messages_for :position -%>

<% form_for :position, :url => { :action => "create", :bill_id => @bill.id } do |form| %>
    <fieldset>
      <legend>Create a New Position</legend>
    
      <%= render :partial => "form", :object => form %>
      
      <div>
        <%= submit_tag "create" %>
        <%= link_to "cancel", :controller => "bills", :action => "show", :id => @bill.id %>
      </div>
    
    </fieldset>
  <% end %>
</div>