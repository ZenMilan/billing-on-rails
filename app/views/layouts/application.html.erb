<html>
  <head>
    <%= stylesheet_link_tag "style", :media => "all" %>
    <%= stylesheet_link_tag "screen", :media => "screen" %>
    <%= stylesheet_link_tag "print", :media => "print" %>
    <%= javascript_include_tag :defaults %>
    <%= yield :head %>

    <title><%= yield(:title) || "Billing On Rails" %></title>
  </head>

  <body>
    <div id="head">
      <%= link_to content_tag(:h1), root_url %>
      <ul id="navi">
        <% if current_user %>
          <li><%= link_to "Balance", balance_path(:year => Time.now.year) %></li>
          <li><%= link_to "Bills", bills_path %></li>
          <li><%= link_to "Clients", clients_path %></li>
          <li><%= link_to "Company", company_path(@user.company) %></li>
          <li><%= link_to "Expenditures", :controller => 'expenditures' %></li>
        <% end %>
        <li><%= link_to "About", about_path %></li>
        <% if current_user %>
          <li><%= link_to image_tag("icons/disconnect.png", :alt => "logout", :style => "border:0;"), logout_path %></li>
        <% end %>
      </ul>
    <span class="clear">&nbsp;</span>
    </div>

    <%= flash_notice %>

    <div id="content">
      <%= yield :layout %>
    </div>

  </body>
</html>