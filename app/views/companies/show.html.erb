  <dd>Street:</dd>
  <dt><%= h @company.street %></dt>
  <dd>Postcode:</dd>
  <dt><%= h @company.plz %></dt>
  <dd>City:</dd>
  <dt><%= h @company.city %></dt>
  <dd>Tax No:</dd>
  <dt><%= h @company.tax_no %></dt>
  <dd>Tax Type:</dd>
  <dt><%= h @company.billed_date_relevant %></dt>
  <dd>Telephone:</dd>
  <dt><%= h @company.tel %></dt>
  <dd>E-Mail:</dd>
  <dt><%= h @company.email %></dt>
  <dd>Web:</dd>
  <dt><%= h @company.web %></dt>
  <dd>Account No:</dd>
  <dt><%= h @company.account_no %></dt>
  <dd>Bank Code:</dd>
  <dt><%= h @company.bank_code %></dt>
  <dd>Bank:</dd>
  <dt><%= h @company.bank %></dt>
</dl>