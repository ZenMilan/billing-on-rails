<h2><%= h @company.name %></h2>

<% if @company.company_logo %>
  <%= image_tag company_logo_path(@company.company_logo), :alt => "Company Logo" %>
<% else %>
  <% form_for CompanyLogo.new, :html => {:multipart => true} do |f| %>
    <%= f.label :uploaded_picture %>
    <%= f.file_field :uploaded_picture %>
    <%= f.submit "add logo" %>
  <% end %>
<% end %>

<p><%= link_to "edit", edit_company_path(@company) %></p>

<dl>
  <dd>Name:</dd>
