<% content_for :head do %>
    <%= stylesheet_link_tag "homepage", :media =>"all" %>
<% end %>

<div class="welcome">
  Welcome back, <%= h @user.login %>
  <%= display_company_logo(@user.company) %>
</div>

<div class="summary balance">
  <h2>Balance Summary</h2>

  This feature is not implemented yet!
</div>

<div class="summary open_bills">
  <h2>Current Open Bills</h2>

  <%= render :partial => "bills/bills_table", :object => @bills %>
  <br>
  <%= link_to image_tag("icons/table_add.png") + " Add a new bill", new_bill_path %>
</div>

<div class="summary billed_expenditures">
  <h2>Unpaid Expenditures</h2>
  <%= render :partial => "expenditures/expenditures_table", :object => @expenditures %>
  <br>
  <%= link_to image_tag("icons/add.png") + " Add a new expenditure", new_expenditure_path %>
</div>


<div class="summary overdue_bills">
  <h2>Overdue Bills</h2>
  <%= render :partial => "bills/bills_table", :object => @overdue_bills %>
</div>
